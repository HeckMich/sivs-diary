[Unit]
 Description = SIVS Diary Service
 After network.target = sivs-diary_service.service
[Service]
 Type = forking
 Restart=always
 RestartSec=1
 SuccessExitStatus=143
 ExecStart = /usr/local/bin/sivs-diary_service.sh start
 ExecStop = /usr/local/bin/sivs-diary_service.sh stop
 ExecReload = /usr/local/bin/sivs-diary_service.sh reload
[Install]
 WantedBy=multi-user.target